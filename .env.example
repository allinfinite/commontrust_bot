# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# PocketBase Configuration
POCKETBASE_URL=http://localhost:8090
# Preferred (avoid storing a password): create a PocketBase API key / admin token and paste it here.
POCKETBASE_ADMIN_TOKEN=your_admin_token_or_api_key
# Fallback (if you don't have a token):
POCKETBASE_ADMIN_EMAIL=admin@example.com
POCKETBASE_ADMIN_PASSWORD=your_admin_password

# Admin User IDs (comma-separated)
ADMIN_USER_IDS=[123456789, 987654321]

# Credit System Defaults
CREDIT_BASE_LIMIT=100
CREDIT_PER_DEAL=50

# Optional: public website base URL for links in bot messages (e.g. review profile links)
COMMONTRUST_WEB_URL=https://trust.bigislandbulletin.com

# Web Admin (used by web service in docker-compose / Coolify)
# ADMIN_PASSWORD=change_me
# ADMIN_COOKIE_SECRET=generate_a_long_random_secret
# Optional for private PocketBase reads from the website:
# POCKETBASE_API_TOKEN=
